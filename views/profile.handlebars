<div class="row">
    <div class="col-auto">
        <h3>Logged in as {{name}}</h3>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <form class="form blog-form">
                <div class="form-group">
                    <label for="title-blog">title:</label>
                    <input type="text" class="form-input" id="title-blog">
                </div>
                <div class="form-group">
                    <label for="text-blog">text:</label>
                    <textarea name="text-blog" id="text-blog" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Post!</button>
                </div>
            </form>
        </div>
    </div>

    {{#if blogs.length}}
    <div class="col-lg-6 col-md-12" id="blog-list">
        <h3>Your Blogposts:</h3>

        {{#each blogs as |blogpost|}}
        <div class="row">
            <div class="col-md-8">
                <div>
                    <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
                    <div>{{blogpost.text}}</div>
                </div>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">delete</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/blogs.js"></script>